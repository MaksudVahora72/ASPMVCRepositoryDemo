@using ASPMVCRepositoryDemo.Models
@model List<Employee>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Employee List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-file-earmark-plus"></i>Add New Employee
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered border-primary">
	<thead class="thead-dark">
		<tr>
			<th>#Id</th>
			<th>Employee Name</th>
			<th>Department</th>
			<th>Designation</th>
			<th>Mobile</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Operation</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.Id</td>
				<td>@obj.EName</td>
				<td>@obj.EDept</td>
				<td>@obj.EJob</td>
				<td>@obj.EMobile</td>
				<td>@obj.EEmail</td>
				<td>@obj.Esal</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Employee" asp-action="Edit"
						   asp-route-id="@obj.Id"
						   class="btn btn-primary mx-2">
							<i class="bi bi-pencil-fill"></i>EDIT
						</a>
						<a asp-controller="Employee" asp-action="Delete"
						   asp-route-id="@obj.Id"
						   class="btn btn-danger mx-2">
							<i class="bi bi-trash3"></i>DELETE
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>